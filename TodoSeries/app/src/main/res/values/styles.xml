<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <style name="imagenPortadaMiniatura" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/portada_cover_height</item>
        <item name="android:scaleType">fitXY</item>


    </style>

    <style name="textoPortadaMiniatura" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/portada_title_padding</item>
        <item name="android:textSize">@dimen/nombre_serie</item>

    </style>

    <style name="CustomProgressBar">
        <item name="android:background">@xml/progress</item>

    </style>

</resources>
